        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cpfCnpj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cep)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.logradouro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bairro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uf)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id, tipoPessoa = item.tipoPessoa })            
        </td>
        <td>
            @Html.ActionLink("Excluir", "Delete", new { id = item.id, tipoPessoa = item.tipoPessoa })
        </td>
    </tr>
