@model IEnumerable<MeuProjetoWeb.Models.PessoaJurFisViewModel>

@{
    ViewBag.Title = "Index";
}

<br />
<br />

<p>
    @Html.ActionLink("Nova Pessoa", "Create")
</p>

<br />

<table class="table">
    <tr>
        <th>
        </th>
        <th>
            @Html.DisplayName("TIPO PESSOA")
        </th>
        <th>
            @Html.DisplayName("CPF/CNPJ")
        </th>
        <th>
            @Html.DisplayName("NOME")
        </th>
        <th>
            @Html.DisplayName("CEP")
        </th>
        <th>
            @Html.DisplayName("LOGRADOURO")
        </th>
        <th>
            @Html.DisplayName("Nº")
        </th>
        <th>
            @Html.DisplayName("BAIRRO")
        </th>
        <th>
